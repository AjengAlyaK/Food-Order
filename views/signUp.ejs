<div class="d-lg-flex half">
    <div class="bg order-md-1" style="background-image: url('/image/last.jpg'); "></div>
    <div class="contents order-md-2">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <h2 class="mb-4 text-purple">Create Account</h2>
                    <form method="POST" action="/signUp">
                        <div class="form-group mb-3 ">
                            <!-- <label class="mb-2" for="username">Username:</label> -->
                            <input type="text" class="form-control custom-form" name="username" id="username" placeholder="Enter username" autocomplete="off">
                        </div>
                        <div class="form-group mb-3">
                            <!-- <label class="mb-2" for="email">Email:</label> -->
                            <input type="email" class="form-control custom-form" name="email" id="email" placeholder="Enter email" autocomplete="off">
                        </div>
                        <div class="form-group mb-3">
                            <!-- <label class="mb-2" for="nohp">Phone Number:</label> -->
                            <input type="text" class="form-control custom-form" name="nohp" id="nohp" placeholder="Enter Phone Number" autocomplete="off">
                        </div>
                        <div class="form-group mb-3">
                            <!-- <label class="mb-2" for="nohp">Address:</label> -->
                            <input type="text" class="form-control custom-form" name="address" id="address" placeholder="Enter Phone Number" autocomplete="off">
                        </div>
                        <div class="form-group mb-3">
                            <!-- <label class="mb-2" for="password">Password:</label> -->
                            <input type="password" class="form-control custom-form" name="password" id="password" placeholder="Enter password" autocomplete="off">
                        </div>
                        <div class="form-group mb-3">
                            <!-- <label class="mb-2" for="confirm_password">Confirm Password:</label> -->
                            <input type="password" class="form-control custom-form" name="confirm_password" id="confirm_password" placeholder="Confirm password" autocomplete="off">
                        </div>
                        <button type="submit" class="btn custom-button mt-3 rounded-pill custom_red-btn text-white" style="width: 100%;">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>