                <input name="tablesAmount" type="text" class="form-control form-control-lg custom-form" id="jumlahmeja" autocomplete="off" required>
            </div>

            <div class="mb-3">
                <input name="username" value="<%= user.username %>" type="text" class="form-control" id="user" autocomplete="off" hidden required>
            </div>

            <div>
                <button type="submit" class="btn rounded-pill custom_red-btn mr-3 text-light w-100 btn-lg mt-2">Reservasi</button>
            </div>

        </form>
