<!-- banner -->
<div class="container-fluid banner2 d-flex align-items-center">
    <div class="container">
        <h1 class="text-light text-center  mb-3">Makan Aja Dulu, Bayar Belakangan</h1>
    </div>
</div>

<!-- produk konten -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <!-- kategori -->
            <div class="col-md-4 col-lg-3 mb-5">
                <h4 class="mb-4">Kategori</h4>
                <ul class="list-group">
                    <a href="" type="button" class="list-product" id="allProduct" onclick="allProduct()"><li class="list-group-item">Semua</li></a>
                    <a href="" type="button" class="list-product" id="westernFood" onclick="western()"><li class="list-group-item">Western Food</li></a>
                    <a href="" type="button" class="list-product" id="easternFood" onclick="eastern()"><li class="list-group-item">Eastern Food</li></a>
                    <a href="" type="button" class="list-product" id="desert" onclick="desert()"><li class="list-group-item">Desert</li></a>
                    <a href="" type="button" class="list-product" id="beverage" onclick="beverage()"><li class="list-group-item">Beverage</li></a>
                </ul>
            </div>
            <!-- produk -->
            <div class="col-md-8 col-lg-9">
                <h4 class="text-center mb-4">Semua Produk</h4>

                <div class="row">
                    <% products.forEach((p, i) => { i++ %>
                    <div class="col-xs-12 col-sm-6 col-lg-4 mb-3 <%= p.category %>">
                        <div class="card" style="width:  17rem;">

                            <a href="image/product/<%= p.pict_product %>" data-lightbox="<%= p.pict_product %>"
                                data-title="<%= p.name_product %>">
                                <img src="image/product/thumb/<%= p.pict_thumb %>" class="card-img-top" alt="...">
                            </a>

                            <div class="card-body">

                                <h5 class="card-title text-center text-warning"><strong><%= p.name_product %></strong></h5>

                                <p class="card-text text-center"><%= p.preview %></p>

                                <h4 class="text-center text-warning mb-3">Rp <%= p.price %></h4>
                                <div class="dropdown">
                                    <form action="/checkout" method="post">
                                        <input name="buyer" value="<%= user.username %>" type="text" hidden>
                                        <input name="name_product" value="<%= p.name_product %>" type="text" hidden>
                                        <input name="pict_product" value="<%= p.pict_product %>" type="text" hidden>
                                        <input name="pict_thumb" value="<%= p.pict_thumb %>" type="text" hidden>
                                        <input name="price" value="<%= p.price %>" type="number" hidden>
                                        <button class="btn btn-outline-warning w-100" type="submit"  aria-expanded="false">
                                            Beli
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>

                <!-- pagination -->
                <nav class="mt-4 d-flex justify-content-center" aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

