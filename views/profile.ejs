<div class="container-fluid pb-5">
    <div class="container">
        <div class="row">
            <div class="col-5 mt-5">
                <div class="card border">
                    <div class="card-body">
                        <img src="/image/avatar/taylor.jpg" class="rounded-circle mx-auto d-block mt-4"
                            style="width: 30%;" />
                        <!-- this should be name actually -->
                        <h4 class="text-center my-4"><%= user.username %></h4>
                        <div class="justify-content-center">
                            <div class="row offset-1 mb-3">
                                <div class="col-4 fw-bold">Email</div>
                                <div class="col-6"><%= user.email %></div>
                            </div>
                            <div class="row offset-1 mb-3">
                                <div class="col-4 fw-bold">No Hp</div>
                                <div class="col-6"><%= user.nohp %></div>
                            </div>
                            <div class="row offset-1 mb-3">
                                <div class="col-4 fw-bold">Password</div>
                                <div class="col-6"><%= user.password %></div>
                            </div>
                            <div class="row offset-1 mb-3">
                                <div class="col-4 fw-bold">Address</div>
                                <div class="col-6"><%= user.address %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-5 mt-5">
                <div class="card border">
                    <div class="card-body">
                        <h4>Order Status</h4>
                        <hr>
                        <!-- Order Series -->
                        <p>Order Series</p>
                        <h6>#<%= checkout._id %></h6>
                        <hr>
                        <!-- Order Status -->
                        <p>your order is</p>
                        <h3 class="fw-bold"><%= checkout.status %></h3>
                        <% if (checkout.status == "no order yet") { %>
                            <p class="fw-bold">-</p>
                            <p> - </p>
                        <% } else { %>
                            <p class="fw-bold">as on 2 Nov 2023, Thursday</p>
                            <p>Have you received your food ? </p>
                            <div class="mb-4">
                                <a type="button" class="btn rounded-pill custom_red-btn_outline">No</a>
                                <a type="button" class="btn rounded-pill custom_red-btn text-white">Yes</a>
                            </div>
                        <% } %>
                        <hr>
                        <!-- Feedback -->
                        <p class="m-0">How was your delivery food experience ?</p>
                        <div class="row mt-2">
                            <div class="col-2 text-center">
                                <div>
                                    <i class="bi bi-emoji-dizzy larger-icon"></i>
                                </div>
                                <div>
                                    <p>Bad</p>
                                </div>
                            </div>
                            <div class="col-2 text-center">
                                <div>
                                    <i class="col-1 bi bi-emoji-frown larger-icon"></i>
                                </div>
                                <div>
                                    <p>Ok</p>
                                </div>
                            </div>
                            <div class="col-2 text-center">
                                <div>
                                    <i class="col-1 bi bi-emoji-expressionless larger-icon"></i>
                                </div>
                                <div>
                                    <p>Avg</p>
                                </div>
                            </div>
                            <div class="col-2 text-center">
                                <div>
                                    <i class="col-1 bi bi-emoji-smile larger-icon"></i>
                                </div>
                                <div>
                                    <p>Good</p>
                                </div>
                            </div>
                            <div class="col-2 text-center">
                                <div>
                                    <i class="col-1 bi bi-emoji-laughing larger-icon"></i>
                                </div>
                                <div>
                                    <p>Best</p>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <!-- Tracking History -->
                        <h6>Tracking History</h6>
                    </div>
                </div>
            </div>
            <div class="col-2 mt-5">
                <div class="card border-0">
                        <ul class="list-group">
                            <a href="" type="button" class="list-profile" id="editProfile"><li class="list-group-item">Edit Profile</li></a>
                            <a href="" type="button" class="list-profile"><li class="list-group-item active-profile">Order Status</li></a>
                            <a href="" type="button" class="list-profile"><li class="list-group-item">Reservation</li></a>
                            <a href="" type="button" class="list-profile"><li class="list-group-item">Order History</li></a>
                            <a href="" type="button" class="list-profile"><li class="list-group-item">Favorite</li></a>
                            <a href="/logout" type="button" class="list-profile" id="logOut"><li class="list-group-item">Log Out</li></a>
                        </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- subscribe -->
<div class="container-fluid py-5 content-subscribe">
    <div class="container">
        <h5 class="text-center text-light mb-4">Find Us</h5>
        <div class="row justify-content-center">
            <div class="col-sm-1 d-flex justify-content-center mb-2">
                <i class="bi bi-facebook fs-4 text-white"></i>
            </div>
            <div class="col-sm-1 d-flex justify-content-center mb-2">
                <i class="bi bi-instagram fs-4 text-white"></i>
            </div>
            <div class="col-sm-1 d-flex justify-content-center mb-2">
                <i class="bi bi-twitter fs-4 text-white"></i>
            </div>
            <div class="col-sm-1 d-flex justify-content-center mb-2">
                <i class="bi bi-youtube fs-4 text-white"></i>
            </div>
        </div>

        <h5 class="text-center text-light mt-5 mb-0">Subscribe</h5>
        <p class="text-center text-light">Get information about special deal</p>
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <form action="/subscribe" method="post">
                <div class="input-group custom-input-group mb-3">
                    <input name="subscribtion" type="text" class="form-control form-control-lg custom-input" placeholder="write your email" aria-label="Recipient's username" aria-describedby="button-addon2" autocomplete="off">
                    <input name="username" value="<%= user.username %>" type="text" class="form-control" autocomplete="off" hidden>
                    <button class="btn custom_red-btn mr-3 text-light btn-lg custom-button" type="submit" id="button-addon2">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
