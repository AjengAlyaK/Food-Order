<!-- banner -->
<div class="container-fluid banner2 d-flex align-items-center">
    <div class="container">
        <h1 class="text-light text-center  mb-3">When you angry, You just hungry</h1>
    </div>
</div>

<!-- produk konten -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <!-- kategori -->
            <div class="col-md-4 col-lg-3 mb-5">
                <h4 class="mb-4">Category</h4>
                <ul class="list-group">
                    <a href="" type="button" class="list-product" id="allProduct" onclick="allProduct()"><li class="list-group-item active-category">All</li></a>
                    <a href="" type="button" class="list-product" id="westernFood" onclick="western()"><li class="list-group-item">Western Food</li></a>
                    <a href="" type="button" class="list-product" id="easternFood" onclick="eastern()"><li class="list-group-item">Eastern Food</li></a>
                    <a href="" type="button" class="list-product" id="desert" onclick="desert()"><li class="list-group-item">Desert</li></a>
                    <a href="" type="button" class="list-product" id="beverage" onclick="beverage()"><li class="list-group-item">Beverage</li></a>
                </ul>
            </div>
            <!-- produk -->
            <div class="col-md-8 col-lg-9">
                <h4 class="text-center mb-4">All Product</h4>

                <div class="row">
                    <% products.forEach((p, i) => { i++ %>
                    <div class="col-xs-12 col-sm-6 col-lg-4 mb-3 <%= p.category %>">
                        <div class="card" style="width:  17rem;">

                            <a href="image/product/<%= p.pict_product %>" data-lightbox="<%= p.pict_product %>"
                                data-title="<%= p.name_product %>">
                                <img src="image/product/thumb/<%= p.pict_thumb %>" class="card-img-top" alt="...">
                            </a>

                            <div class="card-body">

                                <h5 class="card-title text-center text-red"><strong><%= p.name_product %></strong></h5>

                                <p class="card-text text-center"><%= p.preview %></p>

                                <h4 class="text-center text-red mb-3">Rp <%= p.price %></h4>
                                <div class="dropdown">
                                    <form action="#" method="#">
                                        <input name="buyer" value="" type="text" hidden>
                                        <input name="name_product" value="<%= p.name_product %>" type="text" hidden>
                                        <input name="pict_product" value="<%= p.pict_product %>" type="text" hidden>
                                        <input name="pict_thumb" value="<%= p.pict_thumb %>" type="text" hidden>
                                        <input name="price" value="<%= p.price %>" type="number" hidden>
                                        <button class="btn rounded-pill custom_red-btn_outline mr-3 w-100" type="submit"  aria-expanded="false">
                                            Buy
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>

                <!-- pagination -->
                <nav class="mt-4 d-flex justify-content-center" aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link text-red" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link text-red" href="#">1</a></li>
                        <li class="page-item"><a class="page-link text-red" href="#">2</a></li>
                        <li class="page-item"><a class="page-link text-red" href="#">3</a></li>
                        <li class="page-item"><a class="page-link text-red" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- subscribe -->
<div class="container-fluid py-5 content-subscribe">
    <div class="container">
        <h5 class="text-center text-light mb-4">Find Us</h5>
        <div class="row justify-content-center">
            <div class="col-sm-1 d-flex justify-content-center mb-2">
                <i class="bi bi-facebook fs-4 text-white"></i>
            </div>
            <div class="col-sm-1 d-flex justify-content-center mb-2">
                <i class="bi bi-instagram fs-4 text-white"></i>
            </div>
            <div class="col-sm-1 d-flex justify-content-center mb-2">
                <i class="bi bi-twitter fs-4 text-white"></i>
            </div>
            <div class="col-sm-1 d-flex justify-content-center mb-2">
                <i class="bi bi-youtube fs-4 text-white"></i>
            </div>
        </div>

        <h5 class="text-center text-light mt-5 mb-0">Subscribe</h5>
        <p class="text-center text-light">Get information about special deal</p>
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <form action="#" method="#">
                <div class="input-group custom-input-group mb-3">
                    <input name="subscribtion" type="text" class="form-control form-control-lg custom-input" placeholder="write your email" aria-label="Recipient's username" aria-describedby="button-addon2" autocomplete="off">
                    <input name="username" value="" type="text" class="form-control" autocomplete="off" hidden>
                    <button class="btn custom_red-btn mr-3 text-light btn-lg custom-button" type="submit" id="button-addon2">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

