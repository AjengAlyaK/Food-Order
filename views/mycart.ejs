<script src="dist/js/lightbox-plus-jquery.min.js"></script>
<script type="text/javascript">
    // increment
    function incrementValue(index) {
        var inputField = document.getElementById('index_' + String(index));
        var total = document.getElementById('total_' + String(index));
        var price = parseInt(document.getElementById('price_' + String(index)).innerHTML);
        if (inputField) {
            var value = parseInt(inputField.value, 10);
            value = isNaN(value) ? 0 : value;
            if (value < 10) {
                value++;
                inputField.value = value;
                total.innerHTML = 'Rp ' + price * value;
            }
        }
    }

    // decrement
    function decrementValue(index) {
        var inputField = document.getElementById('index_' + String(index));
        var total = document.getElementById('total_' + String(index));
        var price = parseInt(document.getElementById('price_' + String(index)).innerHTML);
        if (inputField) {
            var value = parseInt(inputField.value, 10);
            value = isNaN(value) ? 0 : value;
            if (value > 1) {
                value--;
                inputField.value = value;
                total.innerHTML = 'Rp ' + price * value;
            }
        }
    }

    console.log(incrementValue(index));
 

</script>




