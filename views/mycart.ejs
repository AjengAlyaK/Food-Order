<div class="container-fluid py-5">
    <div class="container">
        <h2 class="text-center my-5">Keranjang Belanja</h2>

        <div class="table-responsive" id="mycart">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Pesanan</th>
                        <th>Harga</th>
                        <th>Jumlah</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% mycart.forEach((c, i)=> { i++ %>
                        <tr style="vertical-align: middle;">
                            <td>
                                <a href="image/product/<%= c.pict_product %>" data-lightbox="<%= c.name_product %>"
                                    data-title="<%= c.name_product %>">
                                    <img src="image/product/thumb/<%= c.pict_thumb %>"
                                        class="img-thumbnail d-none d-sm-block" width="150px" alt="">
                                    <label class="d-block d-sm-none" for="">
                                        <%= c.name_product %>
                                    </label>
                                </a>
                            </td>
                            <td>
                                <%= c.name_product %>
                            </td>
                            <td>Rp <%= c.price %></td>
                            <td class="quantity">
                                <div class="container">
                                    <input type="button" class="btn border" onclick="decrementValue(parseInt('<%= i %>'))"  value="-" />
                                    <input type="text" class="input-form" name="quantity" value="1" maxlength="2" max="10" size="1"
                                        id="index_<%= i %>" oninput="updateTotal(parseInt('<%= i %>'))"/>
                                    <input type="button" class="btn border" onclick="incrementValue(parseInt('<%= i %>'))" value="+" />
                                </div>
                            </td>
                            <td id="price_<%= i %>" style="display:none;"><%= c.price %></td>
                            <td id="total_<%= i %>">Rp <%= c.price %></td>
                        </tr>
                        <% }) %>
                            <th colspan="4">Total</th>
                            <th id="overalltotal">Rp 0</th>
                            <tr></tr>
                </tbody>
            </table>
        </div>

        <button class="btn btn-warning text-light">Checkout</button>
    </div>
</div>

